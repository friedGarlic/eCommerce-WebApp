@model IEnumerable<Actor>


<div class="row">

    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.ProfilePictureUrl)</th>

                    <th>@Html.DisplayNameFor(m => m.FullName)</th>

                    <th>@Html.DisplayNameFor(m => m.Bio)</th>

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var i in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@i.ProfilePictureUrl" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor( e => i.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(e => i.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"> <i class="bi bi-pencil-square">Edit</i> </a>
                            <a class="btn btn-outline-info"> <i class="bi bi-eye">Details</i> </a>
                            <a class="btn btn-danger"> <i class="bi bi-trash">Delete</i> </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>